{
  "compilerOptions": {
    "target": "esnext",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "allowJs": true,
    "strict": true,
    "strictPropertyInitialization": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "typeRoots": [
      "src/typings",
      "node_modules/@types"
    ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "exclude": [
    "build",
  ]
} 